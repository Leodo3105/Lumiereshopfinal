@{
	Layout = "_Layout";
}

<div class="breadcrumb">
	<div class="container">
		<div class="breadcrumb-inner">
			<ul class="list-inline list-unstyled">
				<li><a asp-controller="Home" asp-action="Index">Home</a></li>
				<li class='active'>Chi tiết sản phẩm</li>
			</ul>
		</div><!-- /.breadcrumb-inner -->
	</div><!-- /.container -->
</div><!-- /.breadcrumb -->

<div class="body-content outer-top-xs">
	<div class='container'>
		<div class='row single-product'>
			<div class='col-xs-12 col-sm-12 col-md-3 sidebar'>
				<div class="sidebar-module-container">
					@* <div class="home-banner outer-top-n outer-bottom-xs">
						<img src="~/client/images/banners/LHS-banner.jpg" alt="Image">
					</div> *@
				</div>
			</div><!-- /.sidebar -->
			<div class='col-xs-12 col-sm-12 col-md-9 rht-col'>
				<div class="detail-block">
					<div class="row">
						@if (Model != null)
						{
							<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 gallery-holder">
								<div class="product-item-holder size-big single-product-gallery small-gallery">
									<div id="owl-single-product">
										<div class="single-product-gallery-item" id="slide1">
											<a data-lightbox="image-1" data-title="Gallery" href="~/client/images/products/@Model.Anh">
												<img class="img-responsive" alt="" src="assets/images/blank.gif" data-echo="/client/images/products/@Model.Anh" />
											</a>
										</div><!-- /.single-product-gallery-item -->
									</div><!-- /.single-product-slider -->
								</div><!-- /.single-product-gallery -->
							</div><!-- /.gallery-holder -->
							<div class='col-sm-12 col-md-8 col-lg-8 product-info-block'>
								<div class="product-info">
									<h1 class="name">@Model.Ten</h1>
									<div class="rating-reviews m-t-20">
										<div class="row">
											<div class="col-lg-12">
												<div class="pull-left">
													<div class="rating rateit-small"></div>
												</div>
												<div class="pull-left">
													<div class="reviews">
														<a href="#" class="lnk">(13 Reviews)</a>
													</div>
												</div>
											</div>
										</div><!-- /.row -->
									</div><!-- /.rating-reviews -->

									<div class="stock-container info-container m-t-10">
										<div class="row">
											<div class="col-lg-4">
												<div class="stock-box">
													<span class="label">Size:</span>
													<span class="value">@Model.Size</span>
												</div>
											</div>
										</div><!-- /.row -->
									</div><!-- /.stock-container -->
									<div class="description-container m-t-20">
										<p><strong>Lưu ý:</strong> @Model.LuuY</p>
									</div><!-- /.description-container -->

									<div class="price-container info-container m-t-30">
										<div class="row">

											<div class="col-sm-6 col-xs-6">
												<div class="price-box">
													<span class="price">@Model.Gia.ToString("N0") đ </span>
												</div>
											</div>
										</div><!-- /.row -->
									</div><!-- /.price-container -->

									<div class="quantity-container info-container">
										<div class="row">

											<div class="add-btn">
												<a asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@Model.ID" class="btn btn-primary"><i class="fa fa-shopping-cart inner-right-vs"></i>THÊM VÀO GIỎ HÀNG</a>
											</div>

										</div><!-- /.row -->
									</div><!-- /.quantity-container -->

								</div><!-- /.product-info -->
							</div><!-- /.col-sm-7 -->
						}
					</div><!-- /.row -->
				</div>
			</div><!-- /.col -->
			<div class="clearfix"></div>
		</div><!-- /.row -->
	</div>
</div>
