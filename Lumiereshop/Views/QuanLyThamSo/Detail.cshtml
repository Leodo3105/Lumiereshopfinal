@model Lumiereshop.Models.ThamSo

@{
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Chi tiết Tham Số</h4>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div>
                                <dl class="row">
                                    <dt class="col-sm-2">Mã:</dt>
                                    <dd class="col-sm-10">@Model.MA</dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-2">Tên:</dt>
                                    <dd class="col-sm-10">@Model.Ten</dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-2">Nội dung:</dt>
                                    <dd class="col-sm-10">@Model.NoiDung</dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-2">ID:</dt>
                                    <dd class="col-sm-10">@Model.ID</dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-sm-2">Ảnh:</dt>
                                        @if (!string.IsNullOrEmpty(Model.Anh))
                                        {
                                            <dd class="col-sm-10"><img src="~/client/images/@Model.Anh" alt="Ảnh" /></dd>
                                        }
                                   </dl>
                                </div>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info">Chỉnh sửa</a>
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
