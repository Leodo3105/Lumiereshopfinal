@{
    Layout = "_Layout";
}

<div class="body-content outer-top-vs" id="top-banner-and-menu">
    <div class="container">
        <div class="row">
            <!-- ============================================== SIDEBAR ============================================== -->
            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">

                <!-- ================================== TOP NAVIGATION ================================== -->
                <div class="side-menu animate-dropdown outer-bottom-xs">
                    <div class="head"><i class="icon fa fa-align-justify fa-fw"></i> Danh mục sản phẩm</div>
                    <nav class="yamm megamenu-horizontal">
                        <ul class="nav">
                            @foreach (var loai in ViewBag.ListLoai)
                            {
                                <li class="menu-item">
                                    <a asp-controller="SanPham" asp-action="DanhMuc" asp-route-id="@loai.ID">@loai.Ten</a>
                                </li>
                            }
                        </ul>
                        <!-- /.nav -->
                    </nav>
                    <!-- /.megamenu-horizontal -->
                </div>
                <!-- /.side-menu -->
                <!-- ================================== TOP NAVIGATION : END ================================== -->
                <!-- ============================================== PRODUCT TAGS ============================================== -->
                <div class="sidebar-widget product-tag">
                    <h3 class="section-title">Loại sản phẩm</h3>
                    <div class="sidebar-widget-body outer-top-xs">
                        <div class="tag-list">
                            @foreach (var loai in ViewBag.ListLoai)
                            {
                                <a class="item" title="Phone" asp-controller="SanPham" asp-action="DanhMuc" asp-route-id="@loai.ID">@loai.Ten</a>
                            }
                        </div>
                        <!-- /.tag-list -->
                    </div>
                    <!-- /.sidebar-widget-body -->
                </div>             
                <div class="sidebar-widget outer-top-vs ">
                    <div id="advertisement" class="advertisement">
                        @foreach (var phanHoi in ViewBag.ListPhanHoi)
                        {

                            <div class="item">
                                <div class="avatar"><img src="~/client/images/testimonials/@phanHoi.Anh" alt="Image"></div>
                                <div class="testimonials"><em>"</em> @phanHoi.NoiDung<em>"</em></div>
                                <div class="clients_author">@phanHoi.Ten <span>@phanHoi.ChucDanh</span> </div>
                                <!-- /.container-fluid -->
                            </div>
                            <!-- /.item -->
                        }
                    </div>
                    <!-- /.owl-carousel -->
                </div>
            </div>
            <!-- /.sidemenu-holder -->
            <!-- ============================================== SIDEBAR : END ============================================== -->
            <!-- ============================================== CONTENT ============================================== -->
            <div class="col-xs-12 col-sm-12 col-md-9 homebanner-holder">
                <!-- ========================================== SECTION – HERO ========================================= -->

                <div id="hero">
                    <div id="owl-main" class="owl-carousel owl-inner-nav owl-ui-sm">
                        @foreach (var slide in ViewBag.ListSlide)
                        {
                            <div class="item" style="background-image: url(/client/images/sliders/@slide.Anh);">
                                <div class="container-fluid"> </div>
                            </div>
                            <!-- /.item -->
                        }

                    </div>
                    <!-- /.owl-carousel -->
                </div>

                <!-- ========================================= SECTION – HERO : END ========================================= -->
                <!-- ============================================== SCROLL TABS ============================================== -->

                <div id="product-tabs-slider" class="scroll-tabs outer-top-vs">
                    <div class="more-info-tab clearfix ">
                        <h3 class="new-product-title pull-left">Sản phẩm mới</h3>
                        <!-- /.nav-tabs -->
                    </div>
                    <div class="tab-content outer-top-xs">
                        <div class="tab-pane in active" id="all">
                            <div class="product-slider">
                                <div class="owl-carousel home-owl-carousel custom-carousel owl-theme">

                                    @foreach (var sanPham in ViewBag.ListSanPham)
                                    {
                                        <div class="item item-carousel">
                                            <div class="products">
                                                <div class="product">
                                                    <div class="product-image">
                                                        <div class="image">
                                                            <a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID">
                                                                <img src="~/client/images/products/@sanPham.Anh" alt="">
                                                            </a>
                                                        </div>
                                                        <!-- /.image -->

                                                        <div class="tag new"><span>new</span></div>
                                                    </div>
                                                    <!-- /.product-image -->

                                                    <div class="product-info text-left">
                                                        <h3 class="name"><a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID">@sanPham.Ten</a></h3>
                                                        <div class="rating rateit-small"></div>
                                                        <div class="description"></div>
                                                        <div class="product-price"> <span class="price"> @sanPham.Gia.ToString("N0") đ </span> @*<span class="price-before-discount">$ 800</span>*@ </div>
                                                        <!-- /.product-price -->

                                                    </div>
                                                    <!-- /.product-info -->
                                                    <div class="cart clearfix animate-effect">
                                                        <div class="action">
                                                            <ul class="list-unstyled">
                                                                <li class="add-cart-button btn-group"><a data-toggle="tooltip" class="btn btn-primary icon" asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@sanPham.ID" type="button"> <i class="fa fa-shopping-cart"></i> </a></li>
                                                                <li class="lnk wishlist"> <a data-toggle="tooltip" class="add-to-cart" asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID" title="Wishlist"> <i class="icon fa fa-heart"></i> </a> </li>
                                                                <li class="lnk"> <a data-toggle="tooltip" class="add-to-cart" asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID" title="Compare"> <i class="fa fa-signal" aria-hidden="true"></i> </a> </li>
                                                            </ul>
                                                        </div>
                                                        <!-- /.action -->
                                                    </div>
                                                    <!-- /.cart -->
                                                </div>
                                                <!-- /.product -->

                                            </div>
                                            <!-- /.products -->
                                        </div>
                                        <!-- /.item -->
                                    }
                                </div>
                                <!-- /.home-owl-carousel -->
                            </div>
                            <!-- /.product-slider -->
                        </div>
                        <!-- /.tab-pane -->

                    </div>
                    <!-- /.tab-content -->
                </div>

                <div id="product-tabs-slider" class="scroll-tabs outer-top-vs">
                    <div class="more-info-tab clearfix ">
                        <h3 class="new-product-title pull-left">Sản phẩm ngẫu nhiên</h3>
                        <!-- /.nav-tabs -->
                    </div>
                    <div class="tab-content outer-top-xs">
                        <div class="tab-pane in active" id="all">
                            <div class="product-slider">
                                <div class="owl-carousel home-owl-carousel custom-carousel owl-theme">

                                    @foreach (var sanPham in ViewBag.SanPhamNgauNhien)
                                    {
                                        <div class="item item-carousel">
                                            <div class="products">
                                                <div class="product">
                                                    <div class="product-image">
                                                        <div class="image">
                                                            <a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID">
                                                                <img src="~/client/images/products/@sanPham.Anh" alt="">
                                                            </a>
                                                        </div>
                                                        <!-- /.image -->

                                                        <div class="tag new"><span>Hot</span></div>
                                                    </div>
                                                    <!-- /.product-image -->

                                                    <div class="product-info text-left">
                                                        <h3 class="name"><a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID">@sanPham.Ten</a></h3>
                                                        <div class="rating rateit-small"></div>
                                                        <div class="description"></div>
                                                        <div class="product-price"> <span class="price"> @sanPham.Gia.ToString("N0") đ </span> @*<span class="price-before-discount">$ 800</span>*@ </div>
                                                        <!-- /.product-price -->

                                                    </div>
                                                    <!-- /.product-info -->
                                                    <div class="cart clearfix animate-effect">
                                                        <div class="action">
                                                            <ul class="list-unstyled">
                                                                <li class="add-cart-button btn-group"><a data-toggle="tooltip" class="btn btn-primary icon" asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@sanPham.ID" type="button"> <i class="fa fa-shopping-cart"></i> </a></li>
                                                                <li class="lnk wishlist"> <a data-toggle="tooltip" class="add-to-cart" asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID" title="Wishlist"> <i class="icon fa fa-heart"></i> </a> </li>
                                                                <li class="lnk"> <a data-toggle="tooltip" class="add-to-cart" asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@sanPham.ID" title="Compare"> <i class="fa fa-signal" aria-hidden="true"></i> </a> </li>
                                                            </ul>
                                                        </div>
                                                        <!-- /.action -->
                                                    </div>
                                                    <!-- /.cart -->
                                                </div>
                                                <!-- /.product -->

                                            </div>
                                            <!-- /.products -->
                                        </div>
                                        <!-- /.item -->
                                    }
                                </div>
                                <!-- /.home-owl-carousel -->
                            </div>
                            <!-- /.product-slider -->
                        </div>
                        <!-- /.tab-pane -->

                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.scroll-tabs -->
                <!-- ============================================== SCROLL TABS : END ============================================== -->
            </div>
            <!-- /.homebanner-holder -->
            <!-- ============================================== CONTENT : END ============================================== -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /#top-banner-and-menu --> 