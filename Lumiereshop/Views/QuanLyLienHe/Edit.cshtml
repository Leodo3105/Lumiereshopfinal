@model Lumiereshop.Models.LienHe

@{
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Chỉnh sửa</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" asp-route-id="@Model.ID">
                            <div class="form-group">
                                <label for="Ten">Tên<span class="text-danger">*</span>:</label>
                                <input type="text" id="Ten" name="Ten" class="form-control" asp-for="Ten" value="@Model.Ten">
                            </div>
                            <div class="form-group">
                                <label for="NoiDung">Tên<span class="text-danger">*</span>:</label>
                                <textarea id="NoiDung" name="NoiDung" class="form-control" asp-for="NoiDung">@Model.NoiDung</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
