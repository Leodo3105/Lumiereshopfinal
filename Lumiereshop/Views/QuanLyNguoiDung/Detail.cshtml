@model Lumiereshop.Models.NguoiDung

@{
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Chi tiết người dùng</h4>
                    </div>
                    <div class="card-body">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-3">Tài khoản:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.TaiKhoan)</dd>
                                <dt class="col-sm-3">Tên:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten)</dd>
                                <dt class="col-sm-3">Địa chỉ:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>
                                <dt class="col-sm-3">Quyền:</dt>
                                <dd class="col-sm-9">@((Model.Quyen == 1) ? "Admin" : "Khách hàng")</dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info">Chỉnh sửa</a>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
