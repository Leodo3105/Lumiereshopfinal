@model Lumiereshop.Models.NguoiDung

@{
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Chỉnh sửa người dùng</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="ID" />
                            <div class="form-group">
                                <label>Tài khoản:</label>
                                <input asp-for="TaiKhoan" class="form-control" readonly/>
                            </div>
                            @* <div class="form-group">
                                <label>Mật khẩu<span class="text-danger">*</span>:</label>
                                <input asp-for="MatKhau" class="form-control" />
                            </div> *@
                            <div class="form-group">
                                <label>Tên<span class="text-danger">*</span>:</label>
                                <input asp-for="Ten" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ<span class="text-danger">*</span>:</label>
                                <input asp-for="DiaChi" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Quyền:</label>
                                <select asp-for="Quyen" class="form-control">
                                    <option value="1">Admin</option>
                                    <option value="2">Khách hàng</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
