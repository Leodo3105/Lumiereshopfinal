@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link href="~/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card {
            max-width: 700px;
            margin: auto;
            margin-top: 70px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Đăng ký</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="taikhoan">Email<span class="text-danger">*</span></label>
                                <input type="text" id="username" name="taikhoan" class="form-control" required="" placeholder="Nhập tài khoản">
                            </div>
                            <div class="form-group">
                                <label for="ten">Tên<span class="text-danger">*</span></label>
                                <input type="text" id="name" name="ten" class="form-control" required="" placeholder="Nhập tên">
                            </div>
                            <div class="form-group">
                                <label for="diachi">Địa chỉ<span class="text-danger">*</span></label>
                                <input type="text" id="address" name="diachi" class="form-control" required="" placeholder="Nhập địa chỉ">
                            </div>
                            <div class="form-group">
                                <label for="diachi">Số Điện Thoại<span class="text-danger">*</span></label>
                                <input type="text" id="address" name="sodienthoai" class="form-control" required=""  placeholder="Nhập Số Điện Thoại">
                            </div>
                            @* <div class="form-group">
                                <label for="matkhau">Mật khẩu<span class="text-danger">*</span></label>
                                <input type="password" id="password" name="matkhau" class="form-control" required="" placeholder="Nhập mật khẩu">
                            </div> *@
                            <div class="form-group">
                                <label for="nhaplaimatkhau">Nhập lại mật khẩu<span class="text-danger">*</span></label>
                                <input type="password" id="password" name="nhaplaimatkhau" class="form-control" required="" placeholder="Nhập lại mật khẩu">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                            </div>
                        </form>
                        <div class="text-center mb-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Đăng nhập nếu đã có tài khoản</a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại trang chủ</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
