@model Lumiereshop.Models.TinTuc

@{
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Chi tiết tin tức</h4>
                    </div>
                    <div class="card-body">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-3">ID:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.ID)</dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-3">Tên:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten)</dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-3">Ảnh:</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.Anh))
                                    {
                                        <img src="~/client/images/blog/@Model.Anh" alt="Ảnh tin tức" style="max-width: 200px; max-height: 120px;" />
                                    }
                                    else
                                    {
                                        <span>Không có ảnh</span>
                                    }
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-3">Nội dung:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.NoiDung)</dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-3">Ngày đăng:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayDang, "{0:dd/MM/yyyy}")</dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info">Chỉnh sửa</a>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
