@{
    var count = 0;
}

<div class="breadcrumb">
    <div class="container">
        <div class="breadcrumb-inner">
            <ul class="list-inline list-unstyled">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class='active'>Liên hệ</li>
            </ul>
        </div><!-- /.breadcrumb-inner -->
    </div><!-- /.container -->
</div><!-- /.breadcrumb -->

<div class="body-content">
    <div class="container">
        <div class="checkout-box faq-page">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="heading-title">Các câu hỏi thường gặp</h2>
                    <div class="panel-group checkout-steps" id="accordion">

                        @foreach (var item in ViewBag.ListLienHe)
                        {
                            <div class="panel panel-default checkout-step-@(count++)">
                                <div class="panel-heading">
                                    <h4 class="unicase-checkout-title">
                                        <a data-toggle="collapse" class="" data-parent="#accordion" href="#collapse@(count)">
                                            <span>@(count)</span>@item.Ten
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse@(count)" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        @item.NoiDung
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
